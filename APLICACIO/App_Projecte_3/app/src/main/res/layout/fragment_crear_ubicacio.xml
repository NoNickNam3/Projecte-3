<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.crearUbicacio.CrearUbicacio"
    android:orientation="vertical"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_square_selected"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREAR UBICACIÓN"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginBottom="25dp"/>

        <EditText
            android:id="@+id/edtNombreUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la ubicación" />

        <EditText
            android:id="@+id/edtDireccionUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dirección" />

        <EditText
            android:id="@+id/edtObservacionUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Observaciones" />

        <CheckBox
            android:id="@+id/cbxFavoritoUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Favorito" />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        >

        <Button
            android:id="@+id/btnGuardarCreacioContacte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@drawable/rounded_square_find"
            android:text="Guardar"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/btnCancelarCreacioContacte"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_column="0"
            android:layout_row="1"
            android:background="@drawable/rounded_square_find"
            android:text="Cancelar"/>

    </GridLayout>

</LinearLayout>